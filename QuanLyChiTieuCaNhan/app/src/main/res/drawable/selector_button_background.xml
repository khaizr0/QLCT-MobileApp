<!-- selector_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền khi được nhấn -->
            <corners android:radius="0dp"/> <!-- Độ cong của góc (nếu muốn vuông thì đặt là 0dp) -->
        </shape>
    </item>
    <!-- State when not pressed -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Màu nền mặc định -->
            <corners android:radius="0dp"/> <!-- Độ cong của góc (nếu muốn vuông thì đặt là 0dp) -->
        </shape>
    </item>
</selector>
