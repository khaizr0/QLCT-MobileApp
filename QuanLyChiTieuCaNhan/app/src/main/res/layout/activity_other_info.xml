<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1f1f1f"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Thông tin"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp Lập Trình Di Động 01"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="#FFFFFF"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhóm: Team Văn Phòng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/members_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành Viên:"
        android:textSize="18sp"
        android:textStyle="italic"
        android:paddingBottom="4dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/member_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Nguyễn Ngô Hoàng Nguyên"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/member_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Cao Phan Khải"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/member_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Nguyễn Mạnh Tiến"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/member_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Lê Quang Vinh"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>
</LinearLayout>
