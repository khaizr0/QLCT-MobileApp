<!-- activity_icon_selection.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <!-- Top bar with back button and title -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1f1f1f"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Thêm danh mục"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Textbox to enter category name -->
    <EditText
        android:id="@+id/txt_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_margin="16dp"
        android:hint="Tên danh mục"
        android:padding="12dp"
        android:background="#333333"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"/>

    <!-- Icon selection title -->
    <TextView
        android:id="@+id/tv_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_category_name"
        android:layout_marginStart="16dp"
        android:text="Biểu tượng"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- RecyclerView for icon selection -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/icon_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_icon_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:background="#000000"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4" />

    <!-- Color selection title -->
    <TextView
        android:id="@+id/tv_color_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_recycler_view"
        android:layout_marginStart="16dp"
        android:text="Màu sắc"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <!-- Color selection grid -->
    <GridLayout
        android:id="@+id/color_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_title"
        android:layout_margin="16dp"
        android:columnCount="5"
        android:orientation="horizontal">

        <!-- Example colors, you can add more as needed -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="#FFFFFF"/>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="#FF0000"/>

        <!-- Add more Views for the remaining colors -->

    </GridLayout>

    <!-- Save button -->
    <LinearLayout
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/color_grid"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@color/dimgray"
            android:padding="12dp"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>
