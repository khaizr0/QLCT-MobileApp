<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Fragment.CalendarFragment">

    <!-- Calendar and Search Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/textViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/2024"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMonthYear"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

    <!-- Income, Expense, and Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu nhập"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewIncomeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66đ"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textViewExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textViewExpenseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0đ"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+66đ"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Transactions List -->
    <ListView
        android:id="@+id/listViewTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>


</LinearLayout>
