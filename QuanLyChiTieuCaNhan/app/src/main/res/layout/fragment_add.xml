<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#45454545"
    tools:context=".Fragment.AddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/linearThuNhap"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/unselectedColor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập"
                android:textSize="17sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearChiTieu"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/selectedColor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu"
                android:textSize="17sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Date Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Ngày"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:text="Select date"
            android:textSize="20sp"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Note Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Ghi chú"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5.7dp"
            android:hint="Chưa nhập vào"
            android:padding="9dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_background"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Amount Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:text="Tiền chi"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_background"
            android:textSize="20sp"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Category Title -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Danh mục"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCategory"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonEnterExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Nhập khoản chi"
        android:textSize="20sp"
        android:backgroundTint="#4E4E4E"
        android:textColor="@android:color/white"/>
</LinearLayout>
