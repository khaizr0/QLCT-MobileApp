<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#45454545"
    tools:context=".Fragment.AddFragment">

    <!-- Expense and Income Tabs with Pencil Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#000000"
        android:padding="16dp"
        android:elevation="4dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền chi"
                android:checked="true"
                android:buttonTint="#FFA500"
                android:textColor="#FFA500"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/radioIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thu"
                android:buttonTint="#FFA500"
                android:textColor="#FFA500"
                android:textSize="16sp"/>
        </RadioGroup>

        <!-- Pencil Icon -->
        <ImageView
            android:id="@+id/pencilIcon"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:src="@drawable/pencil" />
    </RelativeLayout>

    <!-- Date Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Ngày"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:inputType="date"
            android:text="07/07/2024 (CN)"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>



    <!-- Note Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Ghi chú"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:hint="Chưa nhập vào"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#FFFFFF"/>
        </LinearLayout>


    <!-- Amount Label and Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:text="Tiền chi"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"/>
    </LinearLayout>


    <!-- Category Title -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Danh mục"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"/>

    <!-- Category Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="10dp">

        <!-- Include category buttons -->
        <include layout="@layout/category_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/categoryButton1"/>

        <include layout="@layout/category_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/categoryButton2"/>

        <include layout="@layout/category_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/categoryButton3"/>

        <!-- Add more include statements as needed for each category button -->
    </GridLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonEnterExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Nhập khoản chi"
        android:textSize="16sp"
        android:backgroundTint="#4E4E4E"
        android:textColor="@android:color/white"/>
</LinearLayout>
