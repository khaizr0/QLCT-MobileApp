<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AddFragment">

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="12:18"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="4dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền chi"
                android:checked="true"
                android:buttonTint="#FFA500"/>

            <RadioButton
                android:id="@+id/radioIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thu"
                android:buttonTint="#FFA500"/>
        </RadioGroup>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="349dp"
            android:layout_height="54dp"
            android:layout_below="@id/radioGroup"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:hint="Ngày"
            android:inputType="date"
            android:text="07/07/2024 (CN)" />

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="347dp"
            android:layout_height="48dp"
            android:layout_below="@id/editTextDate"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:hint="Ghi chú" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="347dp"
            android:layout_height="58dp"
            android:layout_below="@id/editTextNote"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:hint="Tiền chi"
            android:inputType="numberDecimal"
            android:text="0" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="352dp"
            android:layout_height="46dp"
            android:layout_below="@id/editTextAmount"
            android:layout_marginTop="16dp"
            android:text="Danh mục"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="3"
        android:rowCount="4">

        <!-- Example category buttons -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Ăn uống"
            android:drawableTop="@android:drawable/ic_menu_view"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Chi tiêu hàng ngày"
            android:drawableTop="@android:drawable/ic_menu_view"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Quần áo"
            android:drawableTop="@android:drawable/ic_menu_view"
            android:background="?android:attr/selectableItemBackground"/>

        <!-- Add more buttons as needed -->
    </GridLayout>

    <Button
        android:id="@+id/buttonEnterExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Nhập khoản chi"
        android:backgroundTint="#FFA500"/>

</LinearLayout>
